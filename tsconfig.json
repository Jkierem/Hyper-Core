{
    "compilerOptions": {
      "target": "es2016",
      "lib": ["esnext"],
      "module": "commonjs",
      "rootDir": "src",
      "resolveJsonModule": true,     
      "downlevelIteration": true,                      
      "outDir": "build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
    },
    "include": ["./src"]
}